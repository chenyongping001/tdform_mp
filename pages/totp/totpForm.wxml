<!--pages/form/form.wxml-->
<form bindsubmit="keySubmit">
  <view class="input-box">
    <text>名称</text>
    <input name="isuser" placeholder="账号名称"  value="{{token.isuser}}" bindinput="formInputChange"  data-field="isuser" placeholder-style="color: #666; font-size: 1rem;" />
  </view>
  <view class="input-box">
    <text>备注</text>
    <input name="remark" placeholder="帐号备注" value="{{token.remark}}" bindinput="formInputChange"  data-field="remark" placeholder-style="color: #666; font-size: 1rem;" />
  </view>
  <view class="input-box">
    <text>密钥</text>
    <input name="secret" placeholder="密钥"  value="{{token.secret}}" bindinput="formInputChange"  data-field="secret"  placeholder-style="color: #666; font-size: 1rem;" />
  </view>
  <view class="add-btn">
    <button form-type="submit">提交</button>
  </view>
</form>
